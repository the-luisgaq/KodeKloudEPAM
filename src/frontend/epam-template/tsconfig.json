{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "target": "ES2021",
    "declaration": false,
    "declarationMap": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "jsx": "react",
    "outDir": "./build",
    "rootDir": ".",
    "importHelpers": true,
    "paths": {
      "@epam/uui-test-utils": ["test-utils"]
    },
    "baseUrl": ".",
    "isolatedModules": true,
    "stripInternal": true
  },
  "exclude": [
    "node_modules",
    "templates",
    "next-demo",
    "uui_globals.d.ts",
    "**/node_modules",
    "**/build",
    "**/__tests__",
    "**/globals.d.ts",
    "**/uui-e2e-tests"
  ]
}
